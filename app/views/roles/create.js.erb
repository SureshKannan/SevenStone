<% begin %>
	<% if @mode=="new"%>
		<% if (@role.new_record? == false) %>	
			window.parent.updateData("new","<%=escape_javascript(render(:partial => "shared/roles"))%>","0");
			$("#role_name").val("");
			$("#role_name").focus();
		<% else %>
			alert('Error creating role!');
		<% end %>
	<% else %>
		try
		{
			str = " <tr id='r<%=@role.id%>'> " + 
  			  	 " <td><input type='checkbox' id='c<%=@role.id%>' value='<%=@role.id%>' name='ps[]'/></td> " +
  			  	 " <td><%=@role.name %></td> ";
	  		<% if !@role.created_at.nil?  %>
				str += "<td><%=@role.created_at.strftime('%Y-%m-%d')%></td>";
	  		<% end %>
	  		<% if @role.status.nil? %>
				str += "<td>Active</td>";
	  		<% else %>
	    		str += "<td>Inactive</td>";
	  		<% end %>
	  		str += "<td>";
  			str += "<%=escape_javascript(link_to(image_tag('delete.png',:border=>0), {:action=>'delete',:id=> @role.id,:page=>@page},:method=>:post, :remote=>true, :data=> { :confirm=>'Are you sure?' })) %>";
  			str += "</td>";
 			str += "</tr>";
 			window.parent.updateData("edit",str,"r<%=@role.id%>");
			window.parent.closeWindow("r<%=@role.id%>");
  		}
  		catch(err)
  		{
  			alert("error" + err.message);
  		}
	<% end %>
<% rescue Exception => e %>
	alert("<%=e.message%>");
	<% puts "error in rescue"%>
	<% puts e.message %>
<% end %>

